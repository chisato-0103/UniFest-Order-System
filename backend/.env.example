# サーバー設定
PORT=3001
NODE_ENV=development

# フロントエンド URL
FRONTEND_URL=https://unifest-order.onrender.com/

# データベース設定（PostgreSQL）
# 開発環境用（後で実際のDB情報に変更）
DATABASE_URL=postgresql://username:password@localhost:5432/unifest_orders
DB_HOST=localhost
DB_PORT=5432
DB_NAME=unifest_orders
DB_USER=username
DB_PASSWORD=password

# JWT設定
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h

# アップロード設定
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Socket.IO設定
SOCKET_ORIGINS=https://unifest-order.onrender.com/

# セキュリティ設定
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# ログ設定
LOG_LEVEL=info
