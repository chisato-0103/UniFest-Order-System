# 本番環境用環境変数サンプル
# 実際のデプロイ時には適切な値に変更してください

# サーバー設定
NODE_ENV=production
PORT=3001

# フロントエンド URL
FRONTEND_URL=https://unifest-order.onrender.com
CORS_ORIGIN=https://unifest-order.onrender.com

# データベース設定（本番環境用）
DATABASE_URL=postgresql://unifest_user:unifest_secure_password_123@postgres:5432/unifest_order_system
DB_HOST=postgres
DB_PORT=5432
DB_NAME=unifest_order_system
DB_USER=unifest_user
DB_PASSWORD=unifest_secure_password_123

# JWT設定（本番環境では必ず変更してください）
JWT_SECRET=your-super-secure-jwt-secret-for-production-change-this-to-random-string
JWT_EXPIRE=24h

# Redis設定
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# アップロード設定
UPLOAD_MAX_SIZE=10MB
UPLOAD_PATH=/app/uploads

# ログ設定
LOG_LEVEL=info
LOG_PATH=/app/logs

# セキュリティ設定
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_MAX_AGE=86400

# 監視設定
HEALTH_CHECK_INTERVAL=30
STATS_POLLING_INTERVAL=30

# メール設定（オプション）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# 外部API設定（オプション）
# PAYMENT_API_URL=https://api.payment-provider.com
# PAYMENT_API_KEY=your-payment-api-key
